@model IEnumerable<Source>
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>
<body>
	<h2>Sources</h2>
	<table>
		<thead>
			<tr>
				<th>Print Media</th>
			</tr>
			<tr>
				<th>Title</th>
				<th>Author/s</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Source s in Model)
			{
				PrintSource p = s as PrintSource;
				if (p != null)
				{
					<tr>
						<td>@p.Title</td>
						<td>@p.Author</td>
					</tr>
				}
			}
			<tr>
				<th>Online Media</th>
			</tr>
			@foreach (Source s in Model)
			{
				WebSource w = s as WebSource;
				if (w != null)
				{
					<tr>
						<td><a href=@w.Url>@w.Title</a></td>
					</tr>
				}
			}
		</tbody>
	</table>
	<a href="~/">Home</a>
	<a href="~/home/history">Biography</a>
	<a href="~/story">Stories</a>
</body>
</html>
